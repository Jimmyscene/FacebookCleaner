Popup{
	if(facebookOpen()){
		if(apiPermissionsGranted()){
			DisplayMain()
		}
	}


	DisplayMain() = fn(){
		initBackground()
		getUserName() // from facebook page; compare to Name from API. Error if different
		getProfilePic() // from facebook page
		showHomeButton() // Start Over
		//[Button]
		[Delete All Posts Before Date]
		[Delete All Posts After Date]
		[Delete All Posts In Between Dates]
		hideButtons()
		showPickers(buttonOption)
		showSubmit()
		apiCallInBackground(date).onComplete( {hideLoading(), showConfirmation()} )
		showLoading()

	}
	showConfirmation() = {
		...are you sure you want to delete... backgroundpage.get(postsNum)...
		[Confirm][Decline](default->Home)

	}


}


